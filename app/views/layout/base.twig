<!DOCTYPE html>
<html lang="@{locale|en}">
<head>
<title>{% block title %}{% endblock %}</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
{% block styles %}
{{ vite([
'resources/css/fonts.css',
'resources/css/tailwind.css',
]) }}
{% endblock %}
</head>
<body>
{% block body %}{% endblock %}
{% block scripts %}
{{ vite([
'resources/js/app.js',
]) }}
{% endblock %}
</body>
<hidden>{{ context }}</hidden>
</html>
